.form-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 70rpx;
  margin-top: 150rpx;
  background: #fff;
}

.welcom{
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 50rpx;
}

.form-item {
  position: relative;
  background: #fff;
  height: 96rpx;
  border-bottom: 1px solid #d9d9d9;
}

.phone-before{
  width: 80rpx;
  display: inline-block;
  position: absolute;
  top: 36rpx;
  left: 0;
  font-weight: 600;
  font-size: 32rpx;
}
.password-before{
  font-weight: 600;
  /* font-size: 32rpx; */
  margin: 30rpx 0;
}
.form-item .username, .form-item .password, .form-item .code {
  display: inline-block;
  position: absolute;
  top: 26rpx;
  left: 0;
  /* display: block; */
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
}
.password-form-item{
  height: 120rpx;
}

.form-item .username{
  position: absolute;
  top: 26rpx;
  left: 80rpx;
}
.form-item .password{
  position: absolute;
  top: 50rpx;
}

.form-item-code {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.form-item-code .form-item {
  float: left;
  width: 350rpx;
}

.form-item-code .code-img {
  float: right;
  margin-top: 4rpx;
  height: 88rpx;
  width: 236rpx;
}

.form-item .clear {
  position: absolute;
  top: 32rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
}
#clear-password{
  position: absolute;
  top: 60rpx;
}

.login-btn {
  margin: 60rpx 0 40rpx 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
  width: 100%;
  color: #fff;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: flex;
  bottom: 0;
  left: 0;
  padding: 0;
  /* margin-left: 5%; */
  text-align: center;
  /* padding-left: -5rpx; */
  /* border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx; */
  letter-spacing: 3rpx;
  /* background-image: linear-gradient(to right, #9a9ba1 0%, #9a9ba1 100%); */
  background-color: #0FA86C;
}

.form-item-text {
  height: 35rpx;
  width: 100%;
}

.form-item-text .register {
  display: block;
  height: 34rpx;
  float: right;
  color: #0FA86C;
  font-size: 28rpx;
}

.form-item-text .reset {
  display: block;
  height: 34rpx;
  float: left;
  color: #ccc;
  font-size: 28rpx;
}
