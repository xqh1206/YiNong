/* pages/auth/forgetpwd/forgetpwd.wxss */
.form-box {
    width: 100%;
    height: auto;
    overflow: hidden;
    padding: 0 70rpx;
    margin-top: 50rpx;
    background: #fff;
  }

  .tips{
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
  }

  .tips-phone{
    color: #B3B8C8;
    font-size: 25rpx;
    margin-bottom: 50rpx;
  }

  .form-item {
    position: relative;
    background: #fff;
    height: 96rpx;
    border-bottom: 1px solid #d9d9d9;
  }

  .form-item .mobile {
    position: absolute;
    top: 26rpx;
    left: 0;
    display: block;
    width: 100%;
    height: 44rpx;
    background: #fff;
    color: #333;
    font-size: 30rpx;
  }

  .checkphone-btn {
    margin: 60rpx 0 40rpx 0;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 30rpx;
    border-radius: 6rpx;
    width: 100%;
    color: #fff;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    position: flex;
    bottom: 0;
    left: 0;
    padding: 0;
    text-align: center;
    letter-spacing: 3rpx;
    background-color: #0FA86C;
  }